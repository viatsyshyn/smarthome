{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6","es2015"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "../",
    "rootDir": "../",
    "paths": {
      "*": [
        "node_modules/*",
        "test/types/*"
      ]
    }
  },
  "include": [
    "test/unit/**/*"
  ],
  "exclude": [
    "src/typings/*",
    "client/**"
  ]
}